<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BaseSql">
    <sql id="pagingCondition">
        OFFSET #{pageInfo.offset} ROWS FETCH NEXT #{pageInfo.limit} ROWS ONLY
    </sql>

    <sql id="findAllByCondition">
        <if test="ids != null and ids.size() > 0">
            AND t1.id IN
            <foreach collection="ids" open="(" separator="," close=")" index="id">
                #{id}
            </foreach>
        </if>
        <if test="createTimeStart != null">
            AND t1.create_time >= #{createTimeStart}
        </if>
        <if test="createTimeLast != null">
            AND #{createTimeLast} >= t1.create_time
        </if>
        <if test="updateTimeStart != null">
            AND t1.update_time >= #{updateTimeStart}
        </if>
        <if test="updateTimeLast != null">
            AND #{updateTimeLast} >= t1.update_time
        </if>
    </sql>
</mapper>