<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BaseSql">
    <sql id="pagingCondition">
        OFFSET #{pageInfo.offset} ROWS FETCH NEXT #{pageInfo.limit} ROWS ONLY
    </sql>

    <sql id="findByIdCondition">
        id = #{id}
    </sql>

    <sql id="findAllByCondition">
        <if test="p.createTimeStart != null">
            AND `create_time` >= #{entity.createTimeStart}
        </if>
        <if test="p.createTimeLast != null">
            AND #{entity.createTimeLast} >= `create_time`
        </if>
        <if test="p.updateTimeStart != null">
            AND `update_time` >= #{entity.updateTimeStart}
        </if>
        <if test="p.updateTimeLast != null">
            AND  #{entity.updateTimeLast} >=`update_time`
        </if>
    </sql>
</mapper>