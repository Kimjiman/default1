<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.default1.common.file.FileMapper">
	<sql id="selectQuery">
		SELECT
			`id`
			, `ref_path`
			, `ref_id`
			, `ori_name`
			, `new_name`
			, `save_path`
			, `ext`
			, `type`
			, `size`
			, `create_time`
			, `create_id`
		FROM `file`
	</sql>

	<sql id="searchCondition">
		<where>
			<if test="refPath != null and refPath != ''">
				AND `ref_path` = #{refPath}
			</if>
			<if test="refId != null">
				AND `ref_id` = #{refId}
			</if>
		</where>
	</sql>

	<select id="findById" resultType="com.example.default1.common.file.FileInfo">
		<include refid="selectQuery" />
		WHERE id = #{id}
	</select>

	<select id="findAllIn" resultType="com.example.default1.common.file.FileInfo">
		<include refid="selectQuery" />
		WHERE id IN
		<foreach collection="ids" item="item" separator="," open="(" close=")">
			#{item}
		</foreach>
	</select>

	<select id="findBy" resultType="com.example.default1.common.file.FileInfo">
		<include refid="selectQuery" />
		<include refid="searchCondition" />
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `file` (
			`id`
			, `ref_path`
			, `ref_id`
			, `ori_name`
			, `new_name`
			, `save_path`
			, `ext`
			, `type`
			, `size`
			, `create_id`
		) VALUES (
			#{id}
			, #{refPath}
			, #{refId}
			, #{oriName}
			, #{newName}
			, #{savePath}
			, #{ext}
			, #{type}
			, #{size}
			, #{createId}
		)
	</insert>

	<delete id="deleteById">
		DELETE FROM `file`
		WHERE `id` = #{id}
	</delete>

	<delete id="deleteAllIn">
		DELETE FROM `file`
		WHERE id IN
		<foreach collection="ids" item="item" separator="," open="(" close=")">
			#{item}
		</foreach>
	</delete>

	<delete id="deleteByRef">
		DELETE FROM `file`
		WHERE `ref_path` = #{refPath}
		  AND `ref_id` = #{refId}
	</delete>

</mapper>
