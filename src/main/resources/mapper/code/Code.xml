<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.default1.module.code.mapper.CodeMapper">
    <sql id="selectCodeQuery">
        SELECT
            t1.id
            , t1.code_group_id
            , t1.code
            , t1.name
            , t1.order
            , t1.info
            , t1.create_time
            , t1.create_id
            , t1.update_time
            , t1.update_id
            , t2.code_group
            , t2.name AS code_group_name
        FROM `code` t1
        LEFT JOIN `code_group` t2 ON t1.code_group_id = t2.id
    </sql>

    <sql id="searchCodeCondtion">
        <where>
            <if test="ids != null and ids.size() > 0">
                AND t1.id IN
                <foreach collection="ids" open="(" separator="," close=")" index="id">
                    #{id}
                </foreach>
            </if>
            <if test="createTimeStart != null">
                AND `create_time` >= #{
            </if>
            <if test="createTimeLast != null">
                AND #{entity.createTimeLast} >= `create_time`
            </if>
            <if test="updateTimeStart != null">
                AND `update_time` >= #{
            </if>
            <if test="updateTimeLast != null">
                AND #{updateTimeLast} >= `update_time`
            </if>
            <if test="codeGroup != null and codeGroup != ''">
                AND t2.code_group = #{codeGroup}
            </if>
            <if test="code != null and code != ''">
                AND t1.code = LIKE concat('%', #{code}, '%')
            </if>
            <if test="codeGroupName != null and codeGroupName != ''">
                AND t2.code_group_name LIKE concat('%', #{codeGroupName}, '%')
            </if>
            <if test="name != null and name != ''">
                AND t1.name LIKE concat('%', #{name}, '%')
            </if>
        </where>
    </sql>

    <select id="countAllBy" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM `code` t1
        LEFT JOIN `code_group` t2 ON t1.code_group_id = t2.id
        <include refid="searchCodeCondtion"/>
    </select>

    <select id="findAllBy" resultType="com.example.default1.module.code.model.CodeSearchParam">
        <include refid="selectCodeQuery" />
        <include refid="searchCodeCondtion" />
        ORDER BY `code_group_id`, `order`
    </select>

    <select id="findById" resultType="com.example.default1.module.code.model.CodeSearchParam">
        <include refid="selectCodeQuery" />
        WHERE t1.id = #{id}
   </select>

    <insert id="create" useGeneratedKeys="true" keyColumn="id">
        INSERT INTO code (
            code_group_id
            , `code`
            , name
            , `order`
            , info
            , create_id
            , update_id
        ) VALUES (
            (SELECT code_group FROM code_group WHERE id = #{codeGroupId})
            , (SELECT code FROM (SELECT CONCAT(
                (SELECT code_group FROM code_group WHERE id = #{codeGroupId})
                , (SELECT COALESCE(LPAD(MAX(SUBSTR(code, 4)) + 1, 3, '0'), '001') FROM code WHERE code_group_id = #{codeGroupId})
                ) as `code`) as `code`)
            , #{name}
            , <choose>
                <when test="order != null">
                    #{order}
                </when>
                <otherwise>
                    (SELECT `order` FROM
                        (SELECT COALESCE(max(`order`) + 1, 1) `order` FROM `code` WHERE code_group_id = #{codeGroupId})
                     as `order`)
                </otherwise>
              </choose>
            , #{info}
            , #{createId}
            , #{updateId}
        )
    </insert>

    <update id="update">
        UPDATE code
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="info != null and info != ''">
                info = #{info},
            </if>
            <choose>
                <when test="order != null">
                    #{order},
                </when>
                <otherwise>
                    (SELECT `order` FROM
                        (SELECT COALESCE(max(`order`) + 1, 1) `order` FROM `code`
                            WHERE code_group_id = (SELECT code_group_id FROM `code` WHERE `id` = #{id})
                    ) as `order`),
                </otherwise>
            </choose>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="removeById">
        DELETE FROM `code`
        WHERE id = #{id}
    </delete>

    <delete id="removeByCodeGroupId">
        DELETE
        FROM `code`
        WHERE code_group_id = #{codeGroupId}
    </delete>
</mapper>