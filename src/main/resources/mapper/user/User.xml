<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.default1.front.user.mapper.UserMapper">
	<sql id="selectQuery">
		SELECT
			`id`
			, `login_id`
			, `password`
			, `name`
			, `create_time`
			, `create_id`
		FROM `user`
	</sql>

	<sql id="searchCondition">

	</sql>

	<select id="findById" resultType="com.example.default1.module.user.model.User">
		<include refid="selectQuery" />
		WHERE `id` = #{id}
	</select>

	<insert id="insert">
		INSERT INTO `user` (
			`login_id`
			, `password`
			, `name`
			, `create_id`
		) VALUES (
			#{loginId}
			, #{password}
			, #{name}
			, #{createId}
		)
	</insert>

	<update id="update">
		UPDATE `user`
		<set>
			<if test="password != null and password != ''">
				`password` = #{password},
			</if>
			<if test="name != null and name != ''">
				`name` = #{name},
			</if>
		    `create_time` = NOW()
		</set>
		WHERE id = #{id}
	</update>

	<delete id="deleteById">
		DELETE FROM `user`
		WHERE id = #{id}
	</delete>
</mapper>